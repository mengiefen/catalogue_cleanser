<div id="<%= dom_id item_measures_alias %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Alias:</strong>
    <%= item_measures_alias.alias %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Confirmed:</strong>
    <%= item_measures_alias.confirmed %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this item measures alias", item_measures_alias, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this item measures alias', edit_item_measures_alias_path(item_measures_alias), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
